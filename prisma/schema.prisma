
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  createdAt DateTime  @default(now())
  timeEntries TimeEntry[]
}

model TimeEntry {
  id             Int      @id @default(autoincrement())
  date           DateTime
  categoryId     Int
  category       Category @relation(fields: [categoryId], references: [id])
  durationHours  Float
  note           String
  createdAt      DateTime @default(now())

  @@index([date])
  @@index([categoryId])
  @@index([date, categoryId])
}